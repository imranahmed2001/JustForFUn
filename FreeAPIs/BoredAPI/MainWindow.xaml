<Window x:Class="BoredAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoredAPI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstbox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,252,0,0"/>
        <Button x:Name="btn1" Content="Button" HorizontalAlignment="Center" Margin="0,188,0,0" VerticalAlignment="Top" Height="48" Width="120" Click="btn1_Click"/>
        <Label Content="Are You Bored Yet" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="48"/>

    </Grid>
</Window>
